    "@tailwindcss/vite": "4.1.18",
    "@tanstack/react-router": "1.157.18",
    "@tanstack/react-start": "1.157.18",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-animations": "1.0.1",
